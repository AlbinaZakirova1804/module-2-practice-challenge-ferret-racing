<% if flash[:errors] && flash[:errors].length > 0  %>
<ul><%  flash[:errors].each do |error| %>
  <li> <%= error %></li>
  <% end %>
</ul>
<% end  %>


<%= form_for @charity do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :main_focus %>
    <%= f.text_field :main_focus %><br>
    <%= f.label "Ferrets:" %>
    <%= f.collection_check_boxes :ferret_ids, @ferrets, :id, :name %><br>
    <%= f.submit %>
<% end %>
